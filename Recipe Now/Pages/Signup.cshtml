@page
@model Recipe_Now.Pages.Shared.SignupModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/signup.css">
}

<div class="container-fluid d-flex justify-content-center align-items-center photo  h-100 overflow-hidden " id="box">
    <form>
        <div class="form-group">
            <label style="font-size: 1.5rem; font-weight: 500;" for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   placeholder="Enter email">
        </div>
        <div class="form-group">
            <label style="font-size: 1.5rem; font-weight: 500;" for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
    </form>

</div>

