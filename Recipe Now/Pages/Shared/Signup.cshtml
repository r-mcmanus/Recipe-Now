@page
@model Recipe_Now.Pages.Shared.SignupModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/signup.css">
}

<div class="container-fluid d-flex justify-content-center align-items-center photo  h-100 overflow-hidden "
     style="padding-left: 0px; padding-right: 0px; background-image: url(https://images.unsplash.com/photo-1501784050997-975d9fdb56d8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">

    <form>
        <div class="form-group">
            <label style="font-size: 1.5rem; font-weight: 500;" for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   placeholder="Enter email">
        </div>
        <div class="form-group">
            <label style="font-size: 1.5rem; font-weight: 500;" for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-dark">Submit</button>
    </form>

</div>

